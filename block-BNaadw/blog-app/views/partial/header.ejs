<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog App</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <header class="hHeader">
      <nav class="container flex justify-between align-center">
        <div class="logo flex align-center align-content-center">
          <figure>
            <a href="/">
              <img class="full-width" src="/images/PngItem_1971389.png" />
            </a>
          </figure>
          <p>official blogger</p>
        </div>
        <div class="pNav">
          <button class="botton">
            <a href="/blogs/new">add blog</a>
          </button>
          <button class="botton">
